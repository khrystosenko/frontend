<div class="mdl-layout__header-row">
  <span class="mdl-layout-title"></span>
  <div class="mdl-layout-spacer"></div>
  <nav class="mdl-navigation mdl-layout--large-screen-only">
    {{!--{{#scroll-to href="#benefits" class="mdl-navigation__link"}}
      How it works
    {{/scroll-to}}--}}
    <div class="welcome-language-links">
      {{#each locales as |locale|}}
        {{#mdl-button click=(route-action 'setLocale' locale.id) classNames="mdl-navigation__link" isRaised=locale.isActive isColored=false}} {{locale.text}} {{/mdl-button}}
      {{/each}}
    </div>
  </nav>
</div>

<div class="welcome-title">
  <h3>
    {{t "welcome.header.title"}}<span class="title-dot"></span>
    <h4>{{t "welcome.header.subtitle"}}</h4>
  </h3>
  {{#scroll-to href="#benefits"}}
    {{#mdl-button isRaised=true isColored=false}}
        {{t "welcome.howItWorks.title"}}
    {{/mdl-button}}
  {{/scroll-to}}
</div>

{{#scroll-to href="#benefits" classNames="welcome-learn-more"}}
  {{t "welcome.header.learnMore"}}<br/><i class="material-icons">keyboard_arrow_down</i>
{{/scroll-to}}